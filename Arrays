package main

import (
	"fmt"
)

func main() {

// Array é uma estrutura homogenea e estática  -  pois os elementos são do mesmo tipo, com uma quantidade estática 
//Uma array também é indexada, acessa os elementos através dos indices.  
                  
        var notas [3] float64
           
	fmt.Println(notas)
	
	notas [0], notas [1], notas[2]  =  2.6,3.5,3.5
	
	fmt.Println(notas) 

// Media em Go
	
	total := 0.0
        for i := 0;i<len(notas); i++{

        total += notas [i]

}	
	media := total / float64(len(notas))
	fmt.Printf("Media %.2f\n", media)
	
	
	
	
	
	
	
}
